<apex:page id="pg" standardController="Advance_Workflow__c" sidebar="false" showHeader="false" extensions="AW_ImportExport_Controller">
<apex:includeScript value="{!URLFOR($Resource.UI, 'jquery-1.8.3.js')}"/>
<apex:includeScript value="{!URLFOR($Resource.UI, 'jquery-ui.min.js')}"/>


<apex:stylesheet value="{!URLFOR($Resource.UI, 'jquery-ui.css')}"/> 

    <style> 
        .pbSubheader{
            background-color: #FF6633 !important; 
         }  
         .bPageBlock{
            border-top-color: #FF9933 !important;
         
         }
    </style>
    <apex:sectionHeader title="Import/Export Process" subtitle="Advance Workflow Rule"/>        
    <apex:pageMessages id="error"/>
    
    <apex:form id="frm">
    	<apex:actionFunction name="checkChange" action="{!checkAction}" />      
    	<apex:actionFunction name="loadRules" action="{!loadRules}" rerender="rulePanel, sampleLink, fileFormat, ruleOpt,functionArea,scriptPanel">
    		<apex:param name="p1" value="" assignTo="{!fileFormat}" />
    		<apex:param name="p2" value="" assignTo="{!ruleOpt}" />
    	</apex:actionFunction>            
        <apex:pageBlock id="pgb1" title="Import/Export Menu" mode="edit">       
            <apex:pageBlockButtons >
                <apex:commandButton action="{!cancel}" value="Cancel"/>
                <apex:commandButton action="{!start}" disabled="{!NOT(initOption)}" value="Start"/>
            </apex:pageBlockButtons>    
            <apex:pageBlockSection title="Information" collapsible="false">     
                <apex:panelGrid columns="1" id="theGrid">
                    <apex:selectRadio layout="pageDirection" value="{!option}" onchange="checkChange()">
                        <apex:selectOptions value="{!radioOptions}"/>
                    </apex:selectRadio>             
                </apex:panelGrid>
            </apex:pageBlockSection>
            <apex:pageBlockSection id="functionArea" rendered="{!initOption}" columns="1">
                <apex:outputPanel layout="block" rendered="{!chkImport}">
                    <apex:inputFile value="{!xmlFile}" contentType="text/xml"/>                 
                </apex:outputPanel>
                <apex:outputPanel layout="block" rendered="{!NOT(chkImport)}">
                    <apex:selectList id="ruleOpt" value="{!ruleOpt}" size="1" onchange="loadRules('{!fileFormat}' , this.value);">
                        <apex:selectOptions value="{!ruleOptions}"/>
                    </apex:selectList> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;    
                    <apex:outputLabel value="All" style="font-weight:bold;"/>&nbsp;
                    <apex:inputcheckbox value="{!isAll}" onchange="loadRules('{!fileFormat}' , '{!ruleOpt}');"/>                 
                </apex:outputPanel> 
                <apex:outputPanel >
                    <apex:selectList id="fileFormat" value="{!fileFormat}" size="1" onchange="loadRules(this.value, '{!ruleOpt}');">
                        <apex:selectOptions value="{!FileFormatOptions}"/>
                    </apex:selectList>&nbsp;&nbsp;&nbsp;
	                   <a href="/apex/AW_SampleCSV" id="sampleLink" style="{!IF(fileFormat == 'CSV' , 'display:' , 'display:none;')}" >Sample CSV</a>
                </apex:outputPanel>
                 <apex:outputPanel id="rulePanel" >
                    <c:AW_MultiSelectPicklist leftLabel="Available Rules"
		                leftOptions="{!allAvailableRules}"
		                rightLabel="Selected Rules"
		                rightOptions="{!selectedRules}"
		                size="14"
		                width="200px" rendered="{!AND(fileFormat == 'CSV'  , !chkImport, !isAll)}"/> 
              </apex:outputPanel>
               <apex:outputPanel id="bulkMode" style="{IF(AND(fileFormat == 'CSV' ,chkImport), 'display:' , 'display:none;')">
                	<apex:inputCheckbox value="{!isBulkMode}" >Bulk Mode</apex:inputCheckbox>
                 </apex:outputPanel>
              
            </apex:pageBlockSection>            
        </apex:pageBlock>
        <apex:outputPanel id="scriptPanel" >
        <script>
        /*	function showHideSample(val){
        		var aTag = document.getElementById('sampleLink');
        		var cbTag = document.getElementById('pg:frm:pgb1:functionArea:bulkMode');
        		if(aTag != null){
        			if(val == 'CSV'){
        				aTag.style.display = '';
        			}else{
        				aTag.style.display = 'none';
        			} 
        		}
        		
        		if(cbTag != null){
        			if(val == 'CSV' && '{!chkImport}' == 'true'){
        				cbTag.style.display = ''; 
        			}else{ 
        				cbTag.style.display = 'none';
        			}
        		}
            }*/
            $j=jQuery.noConflict();
            $j(document).ready(function() {
           		$j('.requiredText').hide();
           		$j('.requiredExample').hide();
            });
            var cbTag = document.getElementById('pg:frm:pgb1:functionArea:bulkMode');
            if(cbTag != null && '{!chkImport}' == 'false'){
            	cbTag.style.display = 'none';
            }
            
        </script>
        </apex:outputPanel>
    </apex:form>
</apex:page>